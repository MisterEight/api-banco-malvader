{
  "compilerOptions": {
    "target": "ES2020",          // versão do JS que será gerada
    "module": "commonjs",        // módulo compatível com Node.js - tem a versão com require e a com import from, vamos usar a com import
    "outDir": "./dist",          // pasta onde o JS vai ser gerado
    "rootDir": "./src",          // pasta com código TS
    "strict": true,              // ativar checagens rigorosas
    "esModuleInterop": true,     // para importar módulos comuns
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
